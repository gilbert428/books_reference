<p id="notice"><%= notice %></p>

<% if @agent %>
  <p>
    <strong>Name:</strong>
    <%= @agent.name %>
  </p>

  <h2>Books</h2>
  <ul>
    <% @agent.books.each do |book| %>
      <li><%= link_to book.title, book_path(book) %></li>
    <% end %>
  </ul>

  <%= link_to 'Back', agents_path %>
<% end %>
