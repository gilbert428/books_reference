<p id="notice" class="text-green-500"><%= notice %></p>

<% if @agent %>
  <div class="bg-white shadow-md rounded p-4 mb-4">
    <p class="text-gray-700">
      <strong class="font-semibold">Name:</strong>
      <%= @agent.name %>
    </p>

    <h2 class="text-xl font-semibold mt-4">Books</h2>
    <ul class="list-disc list-inside">
      <% @agent.books.each do |book| %>
        <li><%= link_to book.title, book_path(book), class: "text-blue-500 hover:underline" %></li>
      <% end %>
    </ul>

    <%= link_to 'Back', agents_path, class: "mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
<% end %>
