<h1 class="text-2xl font-bold mb-4">Agents</h1>

<% @agents.each do |agent| %>
  <div class="bg-white shadow-md rounded p-4 mb-4">
    <h2 class="text-xl font-semibold">Agent ID: <%= agent.id %></h2>
    <p class="text-gray-700">Name: <%= agent.name %></p>
    <h3 class="text-lg font-medium mt-2">Books:</h3>
    <ul class="list-disc list-inside">
      <% agent.books.each do |book| %>
        <li><%= link_to book.title, book_path(book), class: "text-blue-500 hover:underline" %></li>
      <% end %>
    </ul>
  </div>
<% end %>
