<h1 class="text-2xl font-bold mb-4">Books</h1>

<table class="min-w-full bg-white">
  <thead class="bg-gray-800 text-white">
    <tr>
      <th class="py-2 px-4">Title</th>
      <th class="py-2 px-4">Description</th>
      <th class="py-2 px-4">Downloads</th>
      <th class="py-2 px-4">License</th>
      <th class="py-2 px-4">Image</th>
      <th class="py-2 px-4" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class="border-b">
        <td class="py-2 px-4"><%= link_to book.title, book, class: "text-blue-500" %></td>
        <td class="py-2 px-4"><%= book.description %></td>
        <td class="py-2 px-4"><%= book.downloads %></td>
        <td class="py-2 px-4"><%= book.license %></td>
        <td class="py-2 px-4">
          <% if book.image.attached? %>
            <%= image_tag url_for(book.image), size: "50x50" %>
          <% else %>
            <span>No image</span>
          <% end %>
        </td>
        <td class="py-2 px-4"><%= link_to 'Show', book, class: "text-blue-500" %></td>
        <td class="py-2 px-4"><%= link_to 'Edit', edit_book_path(book), class: "text-yellow-500" %></td>
        <td class="py-2 px-4"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: "bg-blue-500 text-white px-4 py-2 rounded" %>
