<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold mb-4">Resource Details</h1>

  <div class="p-4 bg-white border rounded shadow mb-4">
    <h2 class="text-xl font-semibold">Resource ID: <%= @resource.resource_id %></h2>
    <p><span class="font-semibold">URI:</span> <%= @resource.uri %></p>
    <p><span class="font-semibold">Type:</span> <%= @resource.resource_type %></p>
    <p><span class="font-semibold">Book:</span> <%= link_to @resource.book.title, book_path(@resource.book), class: "text-blue-500" %></p>
  </div>

  <%= link_to 'Back to Resources', resources_path, class: "bg-blue-500 text-white px-4 py-2 rounded" %>
</div>
